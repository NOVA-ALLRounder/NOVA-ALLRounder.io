      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      <span>홈</span>
    </a>

    <!-- Logo -->
    <a href={withBase('/')} class="auth-logo">
      <span class="auth-logo-dim">NO</span><span class="auth-logo-bright">VA</span>
    </a>

    <!-- Card -->
    <div class="auth-card">
      <div class="auth-card-header">
        <h1>계정 만들기</h1>
        <p>AllvIa에 가입하고 자동화를 시작하세요</p>
      </div>

      <!-- Social Buttons -->
