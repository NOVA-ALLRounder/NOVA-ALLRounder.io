---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Section from '../../components/ui/Section.astro';
import Container from '../../components/ui/Container.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';

const contactChannels = [
  {
    title: 'General Email',
    value: 'hello@nova-platform.io',
    href: 'mailto:hello@nova-platform.io',
    id: 'email',
    note: 'Use for general inquiries, feedback, and questions.',
  },
  {
    title: 'GitHub',
    value: 'github.com/AllvIa-ALLRounder',
    href: 'https://github.com/AllvIa-ALLRounder',
    id: 'github',
    note: 'Open-source repository and issue tracker.',
  },
  {
    title: 'Sales Inquiries',
    value: 'sales@nova-platform.io',
    href: 'mailto:sales@nova-platform.io',
    id: 'sales',
    note: 'Contact for demos, partnerships, and Enterprise consultations.',
  },
];

const teamOverview = [
  { label: 'Core Team', value: '4 Members', note: 'Product, Engineering, Design, Growth' },
  { label: 'Track', value: 'B2C + B2B', note: 'Shared platform, separate GTM strategies' },
  { label: 'Timezone', value: 'KST + Remote', note: 'Daily async + fixed sync hours' },
];

const teamProfiles = [
  {
    name: 'David Park',
    role: 'PM, Developer',
    focus: 'Planning, Development',
    email: 'qed4950@gmail.com',
    github: 'github.com/qed4950-web',
    photoAlt: 'Profile A',
  },
  {
    name: 'Juyn Lee',
    role: 'Developer',
    focus: 'Development',
    email: 'juyeon2yo@gmail.com',
    github: 'github.com/juyn-lee',
    photoAlt: 'Profile B',
  },
  {
    name: 'Kyukyung Lee',
    role: 'Developer',
    focus: 'Development',
    email: 'dlrbrud0410@gmail.com',
    github: 'github.com/kyuuu410',
    photoAlt: 'Profile C',
  },
  {
    name: 'Jiwon Son',
    role: 'Developer',
    focus: 'Development',
    email: 'jennysiw715557@gmail.com',
    github: 'github.com/zioni715',
    photoAlt: 'Profile D',
  },
];
---

<BaseLayout title="Contact â€” AllvIa" description="Hub for contact information including email, GitHub, and team profiles." lang="en">
  <Header slot="header" lang="en" />

  <Section padding="large">
    <Container>
      <div class="text-center max-w-4xl mx-auto animate-on-scroll">
        <p class="text-caption text-[#a5b4fc] font-medium tracking-wide uppercase mb-4">Contact</p>
        <h1 class="text-h1 md:text-display text-neutral-100 mb-6 text-balance">All the contact information you need, in one place</h1>
        <p class="text-body-lg text-neutral-400 max-w-2xl mx-auto mb-10">
          Check our team contacts and member profiles.
        </p>
        <Button variant="primary" size="lg" href="#contact-list">View Contacts</Button>
      </div>
    </Container>
  </Section>

  <Section id="contact-list" background="light">
    <Container>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 animate-on-scroll">
        {contactChannels.map((item) => (
          <Card hoverable={false}>
            <div class="p-6" id={item.id}>
              <p class="text-caption text-[#a5b4fc] uppercase tracking-wide mb-2">{item.title}</p>
              <a
                href={item.href}
                target={item.href.startsWith('http') ? '_blank' : undefined}
                rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                class="text-h4 text-neutral-100 break-all hover:text-accent-200 transition-colors"
              >
                {item.value}
              </a>
              <p class="text-caption text-neutral-400 mt-3">{item.note}</p>
            </div>
          </Card>
        ))}
      </div>
    </Container>
  </Section>

  <Section>
    <Container>
      <div class="text-center mb-12 animate-on-scroll">
        <h2 class="text-h2 text-neutral-100 mb-4">Team Overview</h2>
        <p class="text-body-lg text-neutral-400">Team organization and operation behind AllvIa.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12 animate-on-scroll">
        {teamOverview.map((item) => (
          <Card hoverable={false}>
            <div class="p-6">
              <p class="text-caption text-[#a5b4fc] uppercase tracking-wide mb-2">{item.label}</p>
              <p class="text-h3 text-neutral-100 mb-2">{item.value}</p>
              <p class="text-caption text-neutral-400">{item.note}</p>
            </div>
          </Card>
        ))}
      </div>

      <div class="text-center mb-12 animate-on-scroll">
        <h2 class="text-h2 text-neutral-100 mb-4">Meet the Team</h2>
        <p class="text-body-lg text-neutral-400">Our core members building the future of OS automation.</p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 animate-on-scroll">
        {teamProfiles.map((person) => (
          <Card hoverable={false}>
            <div class="p-6 text-center h-full">
              <div class="w-28 h-28 rounded-full border border-white/10 bg-[#101217] mx-auto mb-4 flex items-center justify-center">
                <span class="text-xs text-neutral-400">Photo</span>
              </div>
              <h3 class="text-h3 text-neutral-100">{person.name}</h3>
              <p class="text-caption text-neutral-400 mt-1">{person.role}</p>
              <p class="text-caption text-neutral-500 mt-3">{person.focus}</p>
              <div class="mt-5 space-y-1">
                <a href={`mailto:${person.email}`} class="block text-xs text-[#a5b4fc] hover:text-[#c7d2fe] transition-colors break-all">
                  {person.email}
                </a>
                <a href={`https://${person.github}`} target="_blank" rel="noopener noreferrer" class="block text-xs text-neutral-400 hover:text-neutral-200 transition-colors break-all">
                  {person.github}
                </a>
              </div>
              <p class="sr-only">{person.photoAlt}</p>
            </div>
          </Card>
        ))}
      </div>
    </Container>
  </Section>

  <Section background="dark">
    <Container narrow>
      <div class="text-center animate-on-scroll">
        <h2 class="text-h2 text-white mb-4">Need a Quick Intro Call?</h2>
        <p class="text-body-lg text-neutral-400 mb-8">
          Send us an email or request a meeting link via the button below.
        </p>
        <Button variant="primary" size="lg" href="mailto:hello@nova-platform.io">Send Email</Button>
      </div>
    </Container>
  </Section>

  <Footer slot="footer" lang="en" />
</BaseLayout>
