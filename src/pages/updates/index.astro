---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Section from '../../components/ui/Section.astro';
import Container from '../../components/ui/Container.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import Button from '../../components/ui/Button.astro';

const updates = [
  {
    date: '2026.02.10',
    badge: '새 기능',
    badgeVariant: 'accent' as const,
    title: 'AI 분류 모델 v3 출시',
    summary:
      'v3는 분류 정확도와 처리 속도를 개선하며, 확장된 언어 처리와 개선된 엣지 케이스 라우팅을 포함합니다.',
    href: '/updates/2026-02-10',
  },
  {
    date: '2026.01.15',
    badge: '개선',
    badgeVariant: 'success' as const,
    title: '배치 처리 처리량 +40%',
    summary:
      '파이프라인과 큐 튜닝으로 대용량 처리 시간을 단축하고 부하 상태에서의 안정성을 개선했습니다.',
    href: '/updates/2026-01-15',
  },
  {
    date: '2025.12.01',
    badge: '보안',
    badgeVariant: 'warning' as const,
    title: 'RBAC 및 감사 로그 기반 추가',
    summary:
      '초기 접근 제어 및 활동 로그 구조가 Team+ 롤아웃 트랙에 포함되었습니다.',
    href: '/updates/2025-12-01',
  },
];
---

<BaseLayout title="업데이트 - NOVA" description="최신 제품 노트, 릴리스 소식, 로드맵 업데이트." lang="ko">
  <Header slot="header" lang="ko" />

  <Section padding="large">
    <Container>
      <div class="text-center max-w-3xl mx-auto mb-16 animate-on-scroll">
        <p class="text-caption text-[#a5b4fc] font-medium tracking-wide uppercase mb-4">업데이트</p>
        <h1 class="text-h1 text-neutral-100 mb-6">새로운 소식</h1>
        <p class="text-body-lg text-neutral-400">
          제품 변경 사항, 릴리스 노트, 롤아웃 소식을 확인하세요.
        </p>
      </div>

      <div class="max-w-md mx-auto mb-16 animate-on-scroll">
        <div class="flex gap-3">
          <input
            type="email"
            placeholder="이메일 주소"
            class="flex-1 px-4 py-3 bg-[#14161b] rounded-lg border border-white/10 text-body text-neutral-100 placeholder:text-neutral-400 focus:outline-none focus:border-accent-500 focus:ring-2 focus:ring-accent-500/20"
            aria-label="구독 이메일"
          />
          <Button variant="primary" size="md">구독</Button>
        </div>
        <p class="text-xs text-neutral-400 mt-2 text-center">
          구독 기능은 현재 준비 중입니다.
        </p>
      </div>

      <div class="space-y-6 max-w-3xl mx-auto animate-on-scroll">
        {updates.map((update) => (
          <Card hoverable={true} href={update.href}>
            <div class="p-8">
              <div class="flex items-center gap-3 mb-4">
                <span class="text-caption text-neutral-400">{update.date}</span>
                <Badge text={update.badge} variant={update.badgeVariant} />
              </div>
              <h2 class="text-h3 text-neutral-100 mb-3">{update.title}</h2>
              <p class="text-body text-neutral-400">{update.summary}</p>
              <span class="inline-block mt-4 text-sm text-[#a5b4fc] font-medium">자세히 보기 →</span>
            </div>
          </Card>
        ))}
      </div>
    </Container>
  </Section>

  <Footer slot="footer" />
</BaseLayout>
