---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Section from '../../components/ui/Section.astro';
import Container from '../../components/ui/Container.astro';
import Badge from '../../components/ui/Badge.astro';

const repo = process.env.GITHUB_REPOSITORY?.split('/')[1] ?? '';
const isUserSiteRepo = repo.endsWith('.github.io');
const basePath = process.env.GITHUB_ACTIONS === 'true' ? (isUserSiteRepo ? '/' : `/${repo}/`) : '/';
const withBase = (url: string) => {
  if (!url.startsWith('/')) return url;
  const clean = url.replace(/^\/+/, '');
  return clean ? `${basePath}${clean}` : basePath;
};
---

<BaseLayout
  title="AI Classification Model v3 Released - NOVA Updates"
  description="Placeholder note for the v3 classification model release."
>
  <Header slot="header" />

  <Section padding="large">
    <Container narrow>
      <article class="animate-on-scroll">
        <a href={withBase('/updates')} class="inline-flex items-center text-sm text-neutral-400 hover:text-neutral-100 mb-8">
          &larr; Back to updates
        </a>
        <div class="flex items-center gap-3 mb-4">
          <time datetime="2026-02-10" class="text-sm text-neutral-400">2026.02.10</time>
          <Badge text="New Feature" variant="accent" />
        </div>
        <h1 class="text-h1 text-neutral-100 mb-6">AI Classification Model v3 Released</h1>
        <p class="text-body-lg text-neutral-400 mb-12">
          Placeholder release note. This page shows how update posts will be structured for launch communications.
        </p>

        <div class="space-y-8">
          <section>
            <h2 class="text-h3 text-neutral-100 mb-3">Highlights</h2>
            <ul class="list-disc pl-6 space-y-2 text-neutral-300">
              <li>Improved precision on long-form text classification (placeholder).</li>
              <li>Faster inference path for high-volume queues (placeholder).</li>
              <li>Better fallback handling for low-confidence edge cases (placeholder).</li>
            </ul>
          </section>

          <section>
            <h2 class="text-h3 text-neutral-100 mb-3">Impact Scope</h2>
            <p class="text-body text-neutral-300">
              Team and Enterprise tracks receive this first, followed by staged rollout to Individual (placeholder).
            </p>
          </section>

          <section>
            <h2 class="text-h3 text-neutral-100 mb-3">Next Step</h2>
            <p class="text-body text-neutral-300">
              Validate model behavior on your key categories and tune thresholds in workflow policies.
            </p>
          </section>
        </div>
      </article>
    </Container>
  </Section>

  <Footer slot="footer" />
</BaseLayout>

