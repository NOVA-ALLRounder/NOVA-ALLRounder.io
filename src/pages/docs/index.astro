---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Section from '../../components/ui/Section.astro';
import Container from '../../components/ui/Container.astro';
import Card from '../../components/ui/Card.astro';

const categories = [
  {
    title: '시작 가이드',
    desc: '설치부터 첫 자동화 실행까지.',
    href: '/docs/getting-started',
    icon: '01',
  },
  {
    title: '튜토리얼',
    desc: '주요 시나리오별 단계별 실습 가이드.',
    href: '/docs/tutorials',
    icon: '02',
  },
  {
    title: 'API 레퍼런스',
    desc: '엔드포인트, 파라미터, 연동 패턴.',
    href: '/docs/api',
    icon: '03',
  },
  {
    title: 'FAQ',
    desc: '제품 및 배포 관련 자주 묻는 질문.',
    href: '/docs/faq',
    icon: '04',
  },
  {
    title: '변경 이력',
    desc: '릴리스 노트 및 버전별 업데이트.',
    href: '/docs/changelog',
    icon: '05',
  },
];
---

<BaseLayout title="문서 - NOVA" description="시작 가이드, 튜토리얼, API 레퍼런스, 릴리스 업데이트를 위한 공식 문서.">
  <Header slot="header" />

  <Section padding="large">
    <Container>
      <div class="text-center max-w-3xl mx-auto mb-16 animate-on-scroll">
        <p class="text-caption text-accent-300 font-medium tracking-wide uppercase mb-4">문서</p>
        <h1 class="text-h1 text-neutral-100 mb-6">확신을 갖고 빌드하고, 명확하게 배포하세요</h1>
        <p class="text-body-lg text-neutral-400">
          온보딩, 구현, 운영 롤아웃을 위한 체계적인 문서.
        </p>
      </div>

      <div class="max-w-xl mx-auto mb-16 animate-on-scroll">
        <div class="relative">
          <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          <input
            type="search"
            placeholder="문서 검색 (준비 중)"
            disabled
            class="w-full pl-12 pr-4 py-3.5 bg-[#14161b] rounded-lg border border-white/10 text-body text-neutral-500 cursor-not-allowed"
            aria-label="문서 검색"
          />
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 animate-on-scroll">
        {categories.map((cat) => (
          <Card href={cat.href}>
            <div class="p-6">
              <span class="inline-flex items-center justify-center w-9 h-9 rounded-md bg-white/10 text-neutral-200 text-xs font-semibold mb-3">{cat.icon}</span>
              <h2 class="text-h4 text-neutral-100 mb-2">{cat.title}</h2>
              <p class="text-caption text-neutral-400">{cat.desc}</p>
            </div>
          </Card>
        ))}
      </div>
    </Container>
  </Section>

  <Footer slot="footer" />
</BaseLayout>
