---
const currentYear = new Date().getFullYear();
const repo = process.env.GITHUB_REPOSITORY?.split('/')[1] ?? '';
const isUserSiteRepo = repo.endsWith('.github.io');
const basePath = process.env.GITHUB_ACTIONS === 'true'
  ? (isUserSiteRepo ? '/' : `/${repo}/`)
  : '/';

const withBase = (url: string) => {
  if (
    url.startsWith('http://') ||
    url.startsWith('https://') ||
    url.startsWith('mailto:') ||
    url.startsWith('tel:') ||
    url.startsWith('#')
  ) {
    return url;
  }
  if (!url.startsWith('/')) return url;

  const clean = url.replace(/^\/+/, '');
  return clean ? `${basePath}${clean}` : basePath;
};

const footerLinks = {
  Product: [
    { label: 'Overview', href: '/product' },
    { label: 'Pricing', href: '/pricing' },
    { label: 'Updates', href: '/updates' },
  ],
  Resources: [
    { label: 'Docs', href: '/docs' },
    { label: 'Getting Started', href: '/docs/getting-started' },
    { label: 'API Reference', href: '/docs/api' },
    { label: 'FAQ', href: '/docs/faq' },
  ],
  Contact: [
    { label: 'Contact Hub', href: '/contact' },
    { label: 'Email', href: '/contact#email' },
    { label: 'GitHub', href: '/contact#github' },
  ],
  Legal: [
    { label: 'Terms', href: '#' },
    { label: 'Privacy', href: '#' },
    { label: 'Licenses', href: '#' },
  ],
};
---

<footer class="bg-[#0d0e11] border-t border-white/10" role="contentinfo">
  <div class="max-w-container mx-auto px-6 py-14">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-10">
      {Object.entries(footerLinks).map(([category, links]) => (
        <div>
          <h3 class="text-xs font-semibold text-neutral-300 tracking-[0.08em] uppercase mb-4">{category}</h3>
          <ul class="space-y-2.5" role="list">
            {links.map((link) => (
              <li>
                <a href={withBase(link.href)} class="text-sm text-neutral-500 hover:text-neutral-100 transition-colors">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="mt-14 pt-7 border-t border-white/10 flex flex-col md:flex-row items-center justify-between gap-4">
      <div class="flex items-center gap-2 text-neutral-100 font-semibold text-sm tracking-[0.08em] uppercase">
        <span class="inline-flex items-center justify-center w-6 h-6 bg-[#f5ee9b] text-[#111214] rounded text-[10px] font-bold">N</span>
        <span>NOVA</span>
      </div>
      <p class="text-xs text-neutral-500">© {currentYear} NOVA. All rights reserved.</p>
      <div class="flex items-center gap-4">
        <a
          href="https://github.com"
          target="_blank"
          rel="noopener noreferrer"
          class="text-neutral-500 hover:text-neutral-100 transition-colors"
          aria-label="GitHub"
        >
