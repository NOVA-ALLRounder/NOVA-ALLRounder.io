---
const currentYear = new Date().getFullYear();

const footerLinks = {
  Product: [
    { label: '기능 소개', href: '/product' },
    { label: '가격', href: '/pricing' },
    { label: '업데이트', href: '/updates' },
  ],
  Resources: [
    { label: '문서', href: '/docs' },
    { label: '시작 가이드', href: '/docs/getting-started' },
    { label: 'API 레퍼런스', href: '/docs/api' },
    { label: 'FAQ', href: '/docs/faq' },
  ],
  Company: [
    { label: '회사 소개', href: '/company' },
    { label: '문의하기', href: '/company#contact' },
  ],
  Legal: [
    { label: '이용약관', href: '#' },
    { label: '개인정보처리방침', href: '#' },
    { label: '라이선스', href: '#' },
  ],
};
---

<footer class="bg-neutral-50 border-t border-neutral-200/60" role="contentinfo">
  <div class="max-w-container mx-auto px-6 py-16">
    <!-- Footer Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
      {Object.entries(footerLinks).map(([category, links]) => (
        <div>
          <h3 class="text-sm font-semibold text-neutral-900 mb-4">{category}</h3>
          <ul class="space-y-3" role="list">
            {links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-neutral-500 hover:text-neutral-900 transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="mt-16 pt-8 border-t border-neutral-200 flex flex-col md:flex-row items-center justify-between gap-4">
      <div class="flex items-center gap-2 text-neutral-900 font-bold text-lg tracking-tight">
        <span class="inline-flex items-center justify-center w-7 h-7 bg-neutral-900 text-white rounded-md text-xs font-bold">N</span>
        <span>NOVA</span>
      </div>
      <p class="text-sm text-neutral-400">
        © {currentYear} NOVA. All rights reserved.
      </p>
      <div class="flex items-center gap-4">
        <a
          href="https://github.com"
          target="_blank"
          rel="noopener noreferrer"
          class="text-neutral-400 hover:text-neutral-900 transition-colors"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
