---
/**
 * WorkflowAnimation.astro
 * n8n-style animated workflow diagram for the NOVA agent pipeline.
 * OS Event → Rust Collector → AI Analysis → Decision → (Automation / Alert)
 */
---

<section class="wf-root" aria-label="워크플로우 다이어그램">
  <div class="wf-scroll">
    <div class="wf-canvas">
      <!-- ─── Main Horizontal Pipeline ─── -->
      <div class="wf-pipeline">
        <!-- Node 1: Trigger -->
        <div class="wf-node" data-wf-node="1">
          <div class="wf-node__icon wf-icon--trigger">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/></svg>
          </div>
          <div class="wf-node__body">
            <span class="wf-node__title">OS 이벤트 감지</span>
            <span class="wf-node__sub">trigger: system</span>
          </div>
        </div>

        <div class="wf-connector" data-wf-edge="1"><span class="wf-dot"></span></div>

        <!-- Node 2: Collector -->
        <div class="wf-node" data-wf-node="2">
          <div class="wf-node__icon wf-icon--rust">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="3" width="20" height="14" rx="2"/><path d="M8 21h8M12 17v4"/></svg>
          </div>
          <div class="wf-node__body">
            <span class="wf-node__title">Rust Collector</span>
            <span class="wf-node__sub">collect: sensors</span>
          </div>
        </div>

        <div class="wf-connector" data-wf-edge="2"><span class="wf-dot"></span></div>

        <!-- Node 3: AI -->
        <div class="wf-node" data-wf-node="3">
          <div class="wf-node__icon wf-icon--ai">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="3"/><path d="M12 1v4M12 19v4M4.22 4.22l2.83 2.83M16.95 16.95l2.83 2.83M1 12h4M19 12h4M4.22 19.78l2.83-2.83M16.95 7.05l2.83-2.83"/></svg>
          </div>
          <div class="wf-node__body">
            <span class="wf-node__title">AI 분석 엔진</span>
            <span class="wf-node__sub">analyzer: patterns</span>
          </div>
        </div>

        <div class="wf-connector" data-wf-edge="3"><span class="wf-dot"></span></div>

        <!-- Node 4: Decision -->
        <div class="wf-node wf-node--decision" data-wf-node="4">
          <div class="wf-node__icon wf-icon--decision">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
          </div>
          <div class="wf-node__body">
            <span class="wf-node__title">의사결정</span>
            <span class="wf-node__sub">route: condition</span>
          </div>
        </div>

        <!-- Branch fork -->
        <div class="wf-fork">
          <!-- True → Automation -->
          <div class="wf-fork__arm wf-fork__arm--top">
            <svg class="wf-fork__curve" viewBox="0 0 72 52" fill="none">
              <path d="M0,26 C24,26 48,4 72,4" stroke="rgba(255,255,255,0.12)" stroke-width="2"/>
            </svg>
            <span class="wf-fork__dot wf-fork__dot--top"></span>
            <span class="wf-fork__label wf-fork__label--true">true</span>
          </div>
          <div class="wf-fork__arm wf-fork__arm--bottom">
            <svg class="wf-fork__curve" viewBox="0 0 72 52" fill="none">
              <path d="M0,26 C24,26 48,48 72,48" stroke="rgba(255,255,255,0.12)" stroke-width="2"/>
            </svg>
            <span class="wf-fork__dot wf-fork__dot--bottom"></span>
            <span class="wf-fork__label wf-fork__label--false">false</span>
          </div>
        </div>

        <!-- Output nodes -->
        <div class="wf-outputs">
          <div class="wf-node wf-node--small" data-wf-node="5a">
            <div class="wf-node__icon wf-icon--auto">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
            </div>
            <div class="wf-node__body">
              <span class="wf-node__title">자동화 실행</span>
              <span class="wf-node__sub">exec: workflow</span>
            </div>
            <span class="wf-plus">+</span>
          </div>
          <div class="wf-node wf-node--small" data-wf-node="5b">
            <div class="wf-node__icon wf-icon--alert">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 8A6 6 0 006 8c0 7-3 9-3 9h18s-3-2-3-9M13.73 21a2 2 0 01-3.46 0"/></svg>
            </div>
            <div class="wf-node__body">
              <span class="wf-node__title">사용자 알림</span>
              <span class="wf-node__sub">notify: user</span>
            </div>
            <span class="wf-plus">+</span>
          </div>
        </div>
      </div>

      <!-- ─── Sub-nodes (resource connectors below AI node) ─── -->
      <div class="wf-resources">
        <div class="wf-res" data-wf-res="1">
          <div class="wf-res__stem"></div>
          <div class="wf-res__circle"><span>AI</span></div>
          <p class="wf-res__name">OpenAI</p>
          <p class="wf-res__label">Model</p>
        </div>
        <div class="wf-res" data-wf-res="2">
          <div class="wf-res__stem"></div>
          <div class="wf-res__circle"><span>DB</span></div>
          <p class="wf-res__name">SQLite</p>
          <p class="wf-res__label">Memory</p>
        </div>
        <div class="wf-res" data-wf-res="3">
          <div class="wf-res__stem"></div>
          <div class="wf-res__circle"><span>n8n</span></div>
          <p class="wf-res__name">n8n</p>
          <p class="wf-res__label">Tool</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* ── Root ── */
  .wf-root {
    --node-bg: #1a1c22;
    --border: rgba(255,255,255,0.10);
    --border-h: rgba(255,255,255,0.25);
    --accent: #f5ee9b;
    --green: #4ade80;
    --orange: #fb923c;
    --blue: #60a5fa;
    --purple: #c084fc;
    --edge: rgba(255,255,255,0.12);
    --t1: #e5e5e5;
    --t2: #737373;
    padding: 1rem 0 0;
  }

  .wf-scroll {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: thin;
    scrollbar-color: rgba(255,255,255,0.08) transparent;
  }

  .wf-canvas {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 960px;
    padding: 2rem 2rem 1rem;
  }

  /* ── Pipeline (main row) ── */
  .wf-pipeline {
    display: flex;
    align-items: center;
  }

  /* ── Nodes ── */
  .wf-node {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.25rem;
    background: var(--node-bg);
    border: 1.5px solid var(--border);
    border-radius: 10px;
    position: relative;
    cursor: default;
    transition: border-color 0.25s, box-shadow 0.25s;
    opacity: 0;
    animation: fadeUp 0.5s ease forwards;
  }
  .wf-node:hover {
    border-color: var(--border-h);
    box-shadow: 0 0 24px rgba(245,238,155,0.05);
  }
  .wf-node--small {
    padding: 0.7rem 1rem;
  }

  [data-wf-node="1"] { animation-delay: 0.1s; }
  [data-wf-node="2"] { animation-delay: 0.5s; }
  [data-wf-node="3"] { animation-delay: 0.9s; }
  [data-wf-node="4"] { animation-delay: 1.3s; }
  [data-wf-node="5a"] { animation-delay: 1.8s; }
  [data-wf-node="5b"] { animation-delay: 2.0s; }

  .wf-node__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 38px;
    height: 38px;
    border-radius: 8px;
    flex-shrink: 0;
  }
  .wf-icon--trigger { background: rgba(245,238,155,0.15); color: var(--accent); }
  .wf-icon--rust { background: rgba(251,146,60,0.15); color: var(--orange); }
  .wf-icon--ai { background: rgba(192,132,252,0.15); color: var(--purple); }
  .wf-icon--decision { background: rgba(96,165,250,0.15); color: var(--blue); }
  .wf-icon--auto { background: rgba(74,222,128,0.15); color: var(--green); }
  .wf-icon--alert { background: rgba(251,146,60,0.15); color: var(--orange); }

  .wf-node__body { display: flex; flex-direction: column; gap: 2px; }
  .wf-node__title { font-size: 0.85rem; font-weight: 600; color: var(--t1); white-space: nowrap; }
  .wf-node__sub { font-size: 0.65rem; color: var(--t2); font-family: 'SF Mono','Fira Code',monospace; white-space: nowrap; }

  .wf-plus {
    position: absolute;
    right: -10px;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: var(--node-bg);
    border: 1.5px solid var(--border);
    display: grid;
    place-items: center;
    font-size: 12px;
    color: var(--t2);
    transition: border-color 0.2s, color 0.2s;
  }
  .wf-plus:hover { border-color: var(--accent); color: var(--accent); }

  /* ── Connectors ── */
  .wf-connector {
    width: 56px;
    height: 2px;
    background: var(--edge);
    position: relative;
    flex-shrink: 0;
  }
  .wf-dot {
    position: absolute;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--accent);
    top: -2px;
    left: -3px;
    opacity: 0;
    box-shadow: 0 0 8px rgba(245,238,155,0.6);
    animation: dotSlide 3s ease-in-out infinite;
  }
  [data-wf-edge="1"] .wf-dot { animation-delay: 0.3s; }
  [data-wf-edge="2"] .wf-dot { animation-delay: 0.9s; }
  [data-wf-edge="3"] .wf-dot { animation-delay: 1.5s; }

  /* ── Fork (branch from decision) ── */
  .wf-fork {
    position: relative;
    width: 72px;
    height: 90px;
    flex-shrink: 0;
  }
  .wf-fork__arm {
    position: absolute;
    left: 0;
    width: 100%;
  }
  .wf-fork__arm--top { top: 0; height: 50%; }
  .wf-fork__arm--bottom { bottom: 0; height: 50%; }
  .wf-fork__curve {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  .wf-fork__dot {
    position: absolute;
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--accent);
    right: -2px;
    opacity: 0;
    box-shadow: 0 0 8px rgba(245,238,155,0.6);
    animation: dotFade 3s ease-in-out infinite;
    animation-delay: 2.1s;
  }
  .wf-fork__dot--top { top: 4px; }
  .wf-fork__dot--bottom { bottom: 4px; }

  .wf-fork__label {
    position: absolute;
    font-size: 0.55rem;
    font-weight: 700;
    font-family: 'SF Mono','Fira Code',monospace;
    padding: 1px 5px;
    border-radius: 3px;
    left: 50%;
    transform: translateX(-50%);
  }
  .wf-fork__label--true { top: 2px; color: var(--green); background: rgba(74,222,128,0.08); }
  .wf-fork__label--false { bottom: 2px; color: var(--orange); background: rgba(251,146,60,0.08); }

  /* ── Outputs (top/bottom branch targets) ── */
  .wf-outputs {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  /* ── Resources (below AI node) ── */
  .wf-resources {
    display: flex;
    gap: 3.5rem;
    margin-top: 1.75rem;
    justify-content: center;
  }
  .wf-res {
    display: flex;
    flex-direction: column;
    align-items: center;
    opacity: 0;
    animation: fadeUp 0.5s ease forwards;
    animation-delay: 2.4s;
  }
  .wf-res__stem {
    width: 2px;
    height: 20px;
    background: repeating-linear-gradient(to bottom, var(--edge) 0 4px, transparent 4px 8px);
  }
  .wf-res__circle {
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: var(--node-bg);
    border: 1.5px solid var(--border);
    display: grid;
    place-items: center;
    margin-bottom: 6px;
    transition: border-color 0.25s;
  }
  .wf-res__circle:hover { border-color: var(--border-h); }
  .wf-res__circle span { font-size: 0.6rem; font-weight: 700; color: var(--t1); font-family: 'SF Mono','Fira Code',monospace; }
  .wf-res__name { font-size: 0.72rem; font-weight: 600; color: var(--t1); }
  .wf-res__label { font-size: 0.58rem; color: var(--t2); }

  /* ── Keyframes ── */
  @keyframes fadeUp {
    0% { opacity: 0; transform: translateY(10px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  @keyframes dotSlide {
    0% { left: -3px; opacity: 0; }
    8% { opacity: 1; }
    88% { opacity: 1; }
    100% { left: calc(100% - 3px); opacity: 0; }
  }
  @keyframes dotFade {
    0%, 100% { opacity: 0; }
    20% { opacity: 1; }
    80% { opacity: 1; }
  }

  /* Trigger node subtle pulse */
  [data-wf-node="1"] {
    animation: fadeUp 0.5s ease forwards, nodePulse 4s ease-in-out 1.5s infinite;
  }
  @keyframes nodePulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(245,238,155,0); }
    50% { box-shadow: 0 0 0 6px rgba(245,238,155,0.06); }
  }
</style>
