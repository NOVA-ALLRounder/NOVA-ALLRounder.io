---
export interface Props {
  background?: 'white' | 'light' | 'dark';
  padding?: 'default' | 'large' | 'none';
  class?: string;
  id?: string;
}

const { background = 'white', padding = 'default', class: className, id } = Astro.props;

const bgClasses = {
  white: 'bg-[#0d0e11]',
  light: 'bg-[#101217]',
  dark: 'bg-[#090a0d] text-neutral-100',
};

const paddingClasses = {
  default: 'py-20 md:py-28',
  large: 'py-24 md:py-32',
  none: '',
};
---

<section
  id={id}
  class:list={['border-t border-white/10', bgClasses[background], paddingClasses[padding], className]}
>
  <slot />
</section>
