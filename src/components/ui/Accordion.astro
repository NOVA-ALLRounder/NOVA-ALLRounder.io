---
export interface Props {
  items: { question: string; answer: string }[];
}

const { items } = Astro.props;
---

<div class="divide-y divide-white/10 border border-white/10 rounded-lg bg-[#121419]">
  {items.map((item, index) => (
    <details class="group" id={`faq-${index}`}>
      <summary class="flex items-center justify-between gap-4 px-5 py-4 cursor-pointer list-none text-left hover:text-neutral-200 transition-colors [&::-webkit-details-marker]:hidden">
        <span class="text-sm font-medium text-neutral-100 group-open:text-[#a5b4fc] transition-colors">
          {item.question}
        </span>
        <span class="flex-shrink-0 w-5 h-5 text-neutral-500 group-open:rotate-45 transition-transform duration-200" aria-hidden="true">
          <svg viewBox="0 0 20 20" fill="currentColor">
            <path d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" />
          </svg>
        </span>
      </summary>
      <div class="px-5 pb-4 text-neutral-400 text-body leading-relaxed">
        <p>{item.answer}</p>
      </div>
    </details>
  ))}
</div>
