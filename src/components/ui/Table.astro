---
export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={['overflow-x-auto -mx-6 px-6', className]}>
  <table class="w-full text-left border-collapse rounded-lg overflow-hidden border border-white/10 bg-[#121419]">
    <slot />
  </table>
</div>

<style>
  table :global(thead) {
    @apply border-b border-white/15 bg-[#16181d];
  }
  table :global(th) {
    @apply py-3 px-4 text-xs font-semibold text-neutral-300 uppercase tracking-[0.06em] whitespace-nowrap;
  }
  table :global(td) {
    @apply py-3 px-4 text-sm text-neutral-400 border-b border-white/10;
  }
  table :global(tbody tr:hover) {
    @apply bg-white/5;
  }
</style>
