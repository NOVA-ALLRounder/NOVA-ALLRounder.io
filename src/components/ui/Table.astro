---
export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={['overflow-x-auto -mx-6 px-6', className]}>
  <table class="w-full text-left border-collapse">
    <slot />
  </table>
</div>

<style>
  table :global(thead) {
    @apply border-b-2 border-white/15;
  }
  table :global(th) {
    @apply py-3 px-4 text-sm font-semibold text-neutral-100 whitespace-nowrap;
  }
  table :global(td) {
    @apply py-3 px-4 text-sm text-neutral-300 border-b border-white/10;
  }
  table :global(tbody tr:hover) {
    @apply bg-white/5;
  }
</style>
