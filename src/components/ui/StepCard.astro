---
export interface Props {
  step: number;
  title: string;
  description: string;
  class?: string;
}

const { step, title, description, class: className } = Astro.props;
---

<div class:list={['text-left rounded-lg border border-white/10 bg-[#121419] p-6', className]}>
  <div class="inline-flex items-center justify-center w-8 h-8 rounded-full border border-white/20 bg-[#0d0e11] text-[#a5b4fc] text-xs font-bold mb-4 flex-shrink-0 aspect-square">
    {step.toString().padStart(2, '0')}
  </div>
  <h3 class="text-h4 text-neutral-100 mb-2">{title}</h3>
  <p class="text-body text-neutral-400">{description}</p>
</div>
