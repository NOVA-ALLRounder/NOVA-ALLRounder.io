---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
const repo = process.env.GITHUB_REPOSITORY?.split('/')[1] ?? '';
const isUserSiteRepo = repo.endsWith('.github.io');
const basePath = process.env.GITHUB_ACTIONS === 'true'
  ? (isUserSiteRepo ? '/' : `/${repo}/`)
  : '/';

const withBase = (url: string) => {
  if (
    url.startsWith('http://') ||
    url.startsWith('https://') ||
    url.startsWith('mailto:') ||
    url.startsWith('tel:') ||
    url.startsWith('#')
  ) {
    return url;
  }
  if (!url.startsWith('/')) return url;

  const clean = url.replace(/^\/+/, '');
  return clean ? `${basePath}${clean}` : basePath;
};

const sidebarSections = [
  {
    group: 'Guide',
    items: [
      { label: 'Getting Started', href: '/docs/getting-started' },
      { label: 'Tutorials', href: '/docs/tutorials' },
    ],
  },
  {
    group: 'Reference',
    items: [
      { label: 'API Reference', href: '/docs/api' },
      { label: 'FAQ', href: '/docs/faq' },
    ],
  },
  {
    group: 'Updates',
    items: [
      { label: 'Changelog', href: '/docs/changelog' },
    ],
  },
];

const currentPath = Astro.url.pathname;
const stripTrailingSlash = (path: string) => (path.length > 1 && path.endsWith('/') ? path.slice(0, -1) : path);
const appPath = (() => {
  if (basePath !== '/' && currentPath.startsWith(basePath)) {
    return `/${currentPath.slice(basePath.length)}`;
  }
  return currentPath;
})();
const normalizedCurrentPath = stripTrailingSlash(appPath);
---

<BaseLayout title={`${title} - NOVA Docs`} description={description}>
  <Header slot="header" />

  <div class="docs-wrapper">
    <div class="docs-container">
      <!-- Sidebar -->
      <aside class="docs-sidebar">
        <nav aria-label="Docs Navigation" class="docs-sidebar-nav">
          <a href={withBase('/docs')} class="docs-home-link">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
            Docs Home
          </a>

          {sidebarSections.map((section) => (
            <div class="docs-sidebar-group">
              <p class="docs-sidebar-group-label">{section.group}</p>
              <ul role="list">
                {section.items.map((item) => (
                  <li>
                    <a
                      href={withBase(item.href)}
                      class:list={[
                        'docs-sidebar-link',
                        (normalizedCurrentPath === item.href || normalizedCurrentPath === item.href + '/') && 'is-active',
                      ]}
                      aria-current={normalizedCurrentPath === item.href ? 'page' : undefined}
                    >
                      {item.label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}

          <!-- External Links -->
          <div class="docs-sidebar-group docs-sidebar-external">
            <p class="docs-sidebar-group-label">Resources</p>
            <ul role="list">
              <li>
                <a href="https://github.com/NOVA-ALLRounder/main" target="_blank" rel="noopener noreferrer" class="docs-sidebar-link">
                  <span class="docs-sidebar-icon">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
                  </span>
                  GitHub
                  <svg class="docs-external-arrow" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M7 17L17 7M17 7H7M17 7v10"/></svg>
                </a>
              </li>
              <li>
                <a href={withBase('/contact')} class="docs-sidebar-link">
                  <span class="docs-sidebar-icon">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                  </span>
                  Contact
                </a>
              </li>
            </ul>
          </div>
        </nav>
      </aside>

      <!-- Content -->
      <article class="docs-content prose">
        <slot />
      </article>
    </div>
  </div>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .docs-wrapper {
    max-width: 1080px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }
  @media (min-width: 768px) {
    .docs-wrapper {
      padding: 2.5rem 1.5rem 3.5rem;
    }
  }

  .docs-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  @media (min-width: 768px) {
    .docs-container {
      flex-direction: row;
      gap: 2rem;
    }
  }

  /* ─── Sidebar ─── */
  .docs-sidebar {
    flex-shrink: 0;
  }
  @media (min-width: 768px) {
    .docs-sidebar {
      width: 240px;
    }
  }

  .docs-sidebar-nav {
    background: var(--site-bg-soft);
    border: 1px solid var(--site-border);
    border-radius: var(--site-radius);
    padding: 1.25rem;
  }
  @media (min-width: 768px) {
    .docs-sidebar-nav {
      position: sticky;
      top: 6rem;
    }
  }

  .docs-home-link {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--site-accent-strong);
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 1.25rem;
    padding-bottom: 0.875rem;
    border-bottom: 1px solid var(--site-border);
    transition: color 0.2s;
  }
  .docs-home-link:hover {
    color: var(--site-accent);
  }

  .docs-sidebar-group {
    margin-bottom: 1.25rem;
  }
  .docs-sidebar-group:last-child {
    margin-bottom: 0;
  }
  .docs-sidebar-group-label {
    font-size: 0.625rem;
    font-weight: 700;
    color: var(--site-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 0.5rem;
    padding-left: 0.5rem;
  }

  .docs-sidebar-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4375rem 0.625rem;
    border-radius: 0.375rem;
    font-size: 0.8125rem;
    color: var(--site-text-muted);
    text-decoration: none;
    transition: all 0.15s;
  }
  .docs-sidebar-link:hover {
    color: var(--site-text);
    background: rgba(255, 255, 255, 0.05);
  }
  .docs-sidebar-link.is-active {
    color: var(--site-text);
    background: rgba(255, 255, 255, 0.1);
    font-weight: 500;
  }

  .docs-sidebar-icon {
    font-size: 0.8125rem;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 1.125rem;
    flex-shrink: 0;
  }

  .docs-sidebar-external {
    padding-top: 0.875rem;
    border-top: 1px solid var(--site-border);
  }

  .docs-external-arrow {
    margin-left: auto;
    opacity: 0.4;
  }

  /* ─── Content ─── */
  .docs-content {
    flex: 1;
    min-width: 0;
    background: var(--site-bg-soft);
    border: 1px solid var(--site-border);
    border-radius: var(--site-radius);
    padding: 1.5rem;
  }
  @media (min-width: 768px) {
    .docs-content {
      padding: 2rem 2.5rem;
    }
  }

  /* ─── Prose Styles ─── */
  .prose :global(h1) {
    font-size: 2rem;
    font-weight: 700;
    color: var(--site-text);
    margin-bottom: 0.5rem;
    letter-spacing: -0.015em;
    line-height: 1.2;
  }
  .prose :global(h2) {
    font-size: 1.375rem;
    font-weight: 600;
    color: var(--site-text);
    margin-top: 2.5rem;
    margin-bottom: 0.75rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--site-border);
    letter-spacing: -0.01em;
    line-height: 1.3;
  }
  .prose :global(h3) {
    font-size: 1.0625rem;
    font-weight: 600;
    color: var(--site-text);
    margin-top: 1.75rem;
    margin-bottom: 0.5rem;
    letter-spacing: -0.005em;
    line-height: 1.4;
  }
  .prose :global(h4) {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--site-text);
    margin-top: 1.25rem;
    margin-bottom: 0.375rem;
  }
  .prose :global(p) {
    font-size: 0.9375rem;
    line-height: 1.8;
    color: rgba(238, 237, 232, 0.7);
    margin-bottom: 1rem;
  }
  .prose :global(ul),
  .prose :global(ol) {
    font-size: 0.9375rem;
    line-height: 1.8;
    color: rgba(238, 237, 232, 0.7);
    padding-left: 1.5rem;
    margin-bottom: 1rem;
  }
  .prose :global(ul) {
    list-style-type: disc;
  }
  .prose :global(ol) {
    list-style-type: decimal;
  }
  .prose :global(li) {
    margin-bottom: 0.375rem;
  }
  .prose :global(li > ul),
  .prose :global(li > ol) {
    margin-top: 0.375rem;
    margin-bottom: 0;
  }
  .prose :global(code) {
    background: rgba(255, 255, 255, 0.08);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.8125rem;
    color: var(--site-accent-strong);
    font-family: 'JetBrains Mono', monospace;
  }
  .prose :global(pre) {
    background: #0a0b0e;
    color: var(--site-text);
    padding: 1.25rem 1.5rem;
    border-radius: 0.625rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
    border: 1px solid var(--site-border);
    font-size: 0.8125rem;
    line-height: 1.7;
  }
  .prose :global(pre code) {
    background: transparent;
    padding: 0;
    color: inherit;
    font-size: inherit;
  }
  .prose :global(a) {
    color: var(--site-accent-strong);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.15s;
  }
  .prose :global(a:hover) {
    color: var(--site-accent);
  }
  .prose :global(hr) {
    border: none;
    border-top: 1px solid var(--site-border);
    margin: 2rem 0;
  }
  .prose :global(blockquote) {
    border-left: 3px solid var(--site-accent);
    padding-left: 1rem;
    margin: 1.25rem 0;
    font-style: italic;
    color: var(--site-text-muted);
  }
  .prose :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
  }
  .prose :global(th) {
    text-align: left;
    padding: 0.625rem 0.875rem;
    background: rgba(255, 255, 255, 0.04);
    border-bottom: 1px solid var(--site-border);
    color: var(--site-text);
    font-weight: 600;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }
  .prose :global(td) {
    padding: 0.5rem 0.875rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.04);
    color: var(--site-text-muted);
  }
  .prose :global(strong) {
    color: var(--site-text);
    font-weight: 600;
  }

  /* ─── Custom Doc Elements ─── */
  .prose :global(.doc-subtitle) {
    font-size: 1rem;
    color: var(--site-text-muted);
    margin-top: -0.25rem;
    margin-bottom: 2rem;
    line-height: 1.6;
  }
  .prose :global(.doc-callout) {
    background: rgba(245, 238, 155, 0.05);
    border: 1px solid rgba(245, 238, 155, 0.15);
    border-radius: 0.5rem;
    padding: 1rem 1.25rem;
    margin: 1.25rem 0;
    font-size: 0.875rem;
    line-height: 1.7;
    color: var(--site-text-muted);
  }
  .prose :global(.doc-callout strong) {
    color: var(--site-accent-strong);
  }
  .prose :global(.doc-callout-info) {
    background: rgba(96, 165, 250, 0.05);
    border-color: rgba(96, 165, 250, 0.15);
  }
  .prose :global(.doc-callout-warning) {
    background: rgba(251, 191, 36, 0.05);
    border-color: rgba(251, 191, 36, 0.15);
  }
  .prose :global(.doc-badge) {
    display: inline-flex;
    align-items: center;
    padding: 0.125rem 0.5rem;
    border-radius: 999px;
    font-size: 0.6875rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    vertical-align: middle;
  }
  .prose :global(.doc-badge-get) {
    background: rgba(52, 211, 153, 0.1);
    color: #34d399;
    border: 1px solid rgba(52, 211, 153, 0.2);
  }
  .prose :global(.doc-badge-post) {
    background: rgba(96, 165, 250, 0.1);
    color: #60a5fa;
    border: 1px solid rgba(96, 165, 250, 0.2);
  }
  .prose :global(.doc-badge-put) {
    background: rgba(251, 191, 36, 0.1);
    color: #fbbf24;
    border: 1px solid rgba(251, 191, 36, 0.2);
  }
  .prose :global(.doc-badge-delete) {
    background: rgba(248, 113, 113, 0.1);
    color: #f87171;
    border: 1px solid rgba(248, 113, 113, 0.2);
  }
  .prose :global(.doc-badge-patch) {
    background: rgba(192, 132, 252, 0.1);
    color: #c084fc;
    border: 1px solid rgba(192, 132, 252, 0.2);
  }
  .prose :global(.doc-step) {
    display: flex;
    gap: 1rem;
    margin: 1.5rem 0;
    padding: 1.25rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid var(--site-border);
    border-radius: 0.5rem;
  }
  .prose :global(.doc-step-number) {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    border-radius: 50%;
    background: var(--site-accent);
    color: #111214;
    font-weight: 700;
    font-size: 0.875rem;
    flex-shrink: 0;
  }
  .prose :global(.doc-step-content) {
    flex: 1;
    min-width: 0;
  }
  .prose :global(.doc-step-content h4) {
    margin-top: 0;
    margin-bottom: 0.375rem;
  }
  .prose :global(.doc-step-content p) {
    margin-bottom: 0.5rem;
  }
  .prose :global(.doc-step-content p:last-child) {
    margin-bottom: 0;
  }
</style>
